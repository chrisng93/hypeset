# docker.webpack

FROM ubuntu:latest

MAINTAINER Chris Ng, chris.ng93@gmail.com

RUN mkdir -p /usr/src/hypeset-backend
WORKDIR /usr/src/hypeset-frontend
COPY . /usr/src/hypeset-frontend

RUN apt-get update
RUN apt-get install curl -y
RUN curl -sL https://deb.nodesource.com/setup_6.x | bash - && apt-get install nodejs -y
RUN npm install webpack -g
RUN npm install
CMD webpack --watch
